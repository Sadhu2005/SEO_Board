# FlowMind AI - Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
PORT=5000
DEBUG=True

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/flowmind
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/flowmind

# AI APIs
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-key-optional

# Social Media APIs
YOUTUBE_API_KEY=your-youtube-data-api-key
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-optional
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token-optional
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token-optional

# Google Services
GOOGLE_SEARCH_CONSOLE_CREDENTIALS=path/to/credentials.json
GOOGLE_ANALYTICS_TRACKING_ID=your-ga-tracking-id-optional

# Redis Configuration (for background tasks and caching)
REDIS_URL=redis://localhost:6379/0
# For Redis Cloud:
# REDIS_URL=redis://username:password@host:port/db

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/flowmind.log

# Security
JWT_SECRET_KEY=your-jwt-secret-key
BCRYPT_LOG_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# External Services
SENTRY_DSN=your-sentry-dsn-optional

# Development Tools
FLASK_DEBUG=1
RELOADER=True
